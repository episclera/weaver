{
  "name": "uikit",
  "description": "ğŸœ UI library based on Ant-Design and TailwindCSS.",
  "version": "1.0.0",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Episclera",
    "email": "episclera@episclera.com",
    "url": "https://episclera.com"
  },
  "homepage": "https://episclera.github.io/uikit/",
  "repository": {
    "type": "git",
    "url": "https://github.com/episclera/uikit"
  },
  "keywords": [
    "uikit"
  ],
  "bugs": {
    "url": "https://github.com/episclera/uikit/issues"
  },
  "scripts": {
    "build:packages": "lerna run build --stream",
    "watch:packages": "lerna run watch --stream --parallel",
    "start:packages": "lerna run start --stream --parallel",
    "watch:docs": "cd docs && npm run watch",
    "publish:docs": "cd docs && npm run publish",
    "link:packages": "lerna bootstrap",
    "version:packages": "lerna version --conventional-commits --yes --message=\"chore: publish changed packages\"",
    "publish:packages:npm": "lerna publish from-package --yes --registry=https://registry.npmjs.org",
    "publish:packages:github": "lerna publish from-package --yes --registry=https://npm.pkg.github.com",
    "test:packages": "jest --coverage",
    "watch:test:packages": "jest --watch",
    "lint:packages": "eslint ./packages ./docs --ext .ts,.tsx --max-warnings=0",
    "fix:packages": "eslint ./packages ./docs --ext .ts,.tsx --fix --max-warnings=0",
    "lint:packages:styles": "stylelint \"./packages/**/*.less\" \"./docs/**/*.less\" --syntax=less",
    "fix:packages:styles": "stylelint \"./packages/**/*.less\" \"./docs/**/*.less\" --fix --syntax=less"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run lint:packages"
    ],
    "*.(less)": [
      "npm run lint:packages:styles"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@episclera/configkit": "1.2.2",
    "@types/jest": "26.0.19",
    "eslint": "7.20.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "stylelint": "13.10.0"
  }
}
